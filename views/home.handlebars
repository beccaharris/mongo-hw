<div class="col-md-12 jumbotron">
  <div class="text-center">
    <h1>New York Times Scraper</h1>
  </div>
</div>

<div class="alert alert-success" role="alert">
  Article successfully saved
</div>

<div class="col-md-12">
  {{#if article}} {{#each article}}
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-md-9">
          <h4>{{this.title}}</h4>
        </div>
        <div class="col-md-3">
          <button type="button" class="btn btn-info save-button" data-id={{this._id}}>Save Article</button>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-12">
          <p> {{this.summary}}</p>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <a href={{this.link}} target="_blank"><button class="btn btn-outline-info">View full article</button></a>
        </div>
      </div>
    </div>
  </div>
  {{/each}} {{else}}
  <!-- Give a message if there are no articles -->
  <div class="card">
    <div class="card-body">
      <h4>Oh no! Looks like there are no new articles to show!</h4>
    </div>
  </div>
  {{/if}}
</div>